includes:
	- /Users/art/.composer/vendor/szepeviktor/phpstan-wordpress/extension.neon
parameters:
	level: 5
	paths:
		- src/php
	excludePaths:
		- src/php/libraries/*
		- src/php/Emails/*  # Depends on EDD classes not available in stubs
	bootstrapFiles:
		- .phpstan/phpstan-bootstrap.php
	# Treat PHP 7.4 as baseline (your minimum version)
	phpVersion: 70400
	# Allow PHPStan to parse files with higher PHP version syntax (for stubs)
	treatPhpDocTypesAsCertain: false
	ignoreErrors:
		# EDD functions might not be recognized
		- '#Function edd_[a-zA-Z_]+ not found#'

